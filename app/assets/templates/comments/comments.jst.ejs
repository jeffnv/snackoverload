<%var uniqueCode = klass + '_' + id %>
<div class="comments">  
  <ul class="comments-list" data-commentable="<%=uniqueCode%>"></ul>
  <% if(Snackoverload.currentUserId){%>
    <form class="comment-form" accept-charset="utf-8">
      <input type="hidden" 
       name="comment[commentable_id]" value="<%=id%>">
      <input type="hidden" 
       name="comment[commentable_type]" value="<%=klass%>">
     
      <label for="comment">Comment</label>
      <input type="text" name="comment[body]" id="comment" 
       placeholder="useful comment goes here">
       <button class="btn btn-default add-comment-btn" value="Add Comment" id="comment-button">Add Comment</button>
    </form>
  <%}%>
</div>
