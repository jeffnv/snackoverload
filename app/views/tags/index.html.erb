<% @tags.each_with_index do |tag, index|%>
<%if (index % @COLCOUNT == 0)%>
  <div class="row tag-index-row">
    <%end %>
    <div class="col-md-<%=12 / @COLCOUNT%>">    
      <div class="tag-index-col">
        <a class="tag" href="<%=tag_url(tag)%>"><%=tag.name%></a> x <%=tag.tagged_questions.count%>
      </div>
    </div>
    <%if ((index + 1) % @COLCOUNT == 0)%>
  </div>
  <%end %>
<% end%>